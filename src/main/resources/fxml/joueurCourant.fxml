<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="141.0" prefWidth="190.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.umontpellier.iut.trainsJavaFX.vues.VueJoueurCourant">
   <children>
      <StackPane fx:id="moneyStack" prefHeight="80.0" prefWidth="100.0">
         <children>
            <ImageView fitHeight="50.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/boutons/coins.png" />
               </image>
            </ImageView>
            <Label fx:id="moneyL" text="0">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <StackPane fx:id="scoreStack" layoutX="100.0" prefHeight="80.0" prefWidth="100.0">
         <children>
            <ImageView fitHeight="50.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/boutons/score.png" />
               </image>
            </ImageView>
            <Label fx:id="scoreL" prefHeight="14.0" prefWidth="8.0" text="0" textFill="#e4c515">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <StackPane fx:id="railStack" layoutY="80.0" prefHeight="80.0" prefWidth="100.0">
         <children>
            <ImageView fitHeight="50.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/boutons/rails.png" />
               </image>
            </ImageView>
            <Label fx:id="railNbL" text="0" textFill="#e4c515">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
   </children>
</AnchorPane>
