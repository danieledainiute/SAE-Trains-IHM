<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainVue" prefHeight="70.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.umontpellier.iut.trainsJavaFX.vues.VueAutresJoueurs">
   <children>
      <Label fx:id="nomJoueur" layoutX="14.0" layoutY="24.0" text="Label">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <StackPane fx:id="forPoints" layoutX="80.0" layoutY="8.0" prefHeight="60.0" prefWidth="40.0">
         <children>
            <ImageView fitHeight="60.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/boutons/score.png" />
               </image>
            </ImageView>
            <Label fx:id="nbScore" text="0" textFill="#e4c515">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <StackPane fx:id="deffause" layoutX="220.0" layoutY="7.0" prefHeight="60.0" prefWidth="40.0">
         <children>
            <ImageView fitHeight="60.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/boutons/defausse.png" />
               </image>
            </ImageView>
            <Label fx:id="nbDeffause" text="0" textFill="#e4c515">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <StackPane fx:id="rails" layoutX="123.0" layoutY="7.0" prefHeight="60.0" prefWidth="40.0">
         <children>
            <ImageView fitHeight="60.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/boutons/rails.png" />
               </image>
            </ImageView>
            <Label fx:id="nbRails" text="20" textFill="#e4c515">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <StackPane fx:id="deck" layoutX="170.0" layoutY="8.0" prefHeight="60.0" prefWidth="40.0">
         <children>
            <ImageView fitHeight="60.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/boutons/deck.png" />
               </image>
            </ImageView>
            <Label fx:id="nbDeck" text="5" textFill="#e4c515">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </StackPane>
   </children>
</AnchorPane>
